{
  "extends": "../../tsconfig.json",
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["**/__*__/**/*"],
  "compilerOptions": {
    "noEmit": false,
    "module": "CommonJS",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],
    "paths": {
      "@algwiki/db": ["../db/src"],
      "@algwiki/routes": ["../routes/src"],
      "@algwiki/common": ["../common/src"],
      "@algwiki/common-node": ["../common-node/src"]
    }
  },
  "references": [
    {
      "path": "../db"
    },

    {
      "path": "../routes"
    },

    {
      "path": "../common"
    },

    {
      "path": "../common-node"
    }
  ]
}
